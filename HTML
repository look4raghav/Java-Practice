CSS

#register-btn:hover,
#register-btn-footer:hover {
  background-color: lightgreen;
  cursor: pointer;
}

Javascript

const registerBtn = document.querySelector('#register-btn');
const registerBtnFooter = document.querySelector('#register-btn-footer');

registerBtn.addEventListener('mouseover', () => {
  registerBtn.style.backgroundColor = 'lightgreen';
});

registerBtn.addEventListener('mouseout', () => {
  registerBtn.style.backgroundColor = '';
});

registerBtnFooter.addEventListener('mouseover', () => {
  registerBtnFooter.style.backgroundColor = 'lightgreen';
});

registerBtnFooter.addEventListener('mouseout', () => {
  registerBtnFooter.style.backgroundColor = '';
});
